@using City.Tour.Web.Controllers
@model IEnumerable<City.Tour.Library.Models.CityTour.Tour>
@{

    ViewBag.Title = "Home Page";
}

@section contents{
    <link href="~/Content/bootstrap-product.css" rel="stylesheet" />
}

@foreach (var item in Model)
{
    <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
        <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
            <div class="my-3 p-3">
                <h2 class="display-5">
                    <a href="@Url.Action(nameof(TourController.Index), "Tour", new {area = ""})">
                        @item.Name
                    </a>
                </h2>
                <p class="lead">
                    @Html.Raw(item.Descript)
                </p>
            </div>
            <div class="bg-dark box-shadow mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
                <img src="@(item.Banner.StartsWith("http") ? item.Banner : Url.Content(item.Banner))" alt="@item.Name" />
            </div>
        </div>
    </div>
}