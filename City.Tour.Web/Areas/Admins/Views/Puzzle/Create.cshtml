@using Ci.Extension
@using City.Tour.Library.Models.CityTour
@model City.Tour.Library.Models.CityTour.Puzzle
@{
    ViewBag.Title = "Edit";
    Tour tour = ViewBag.tour;
}

<h2>@tour.Name - 新增謎題</h2>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                <label class="col-2 col-form-label">
                    名稱
                </label>
                <div class="col-md-10">
                    <input type="text" name="@nameof(Puzzle.Name)" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-2 col-form-label">
                    排序
                </label>
                <div class="col-md-10">
                    <input type="number" min="0" name="@nameof(Puzzle.Sort)" value="0" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-2 col-form-label">
                    描述
                </label>
                <div class="col-md-10">
                    <textarea name="@nameof(Puzzle.Descript)" rows="10" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-2 col-form-label">
                    圖片
                </label>
                <div class="col-md-10">
                    <input type="file" name="image" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10">
                    <input type="submit" value="儲存" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>

